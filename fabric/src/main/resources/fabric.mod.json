{
  "schemaVersion": 1,
  "id": "dynamiccrosshair",
  "version": "${version}",

  "name": "Dynamic Crosshair",
  "description": "Dynamic Crosshair that changes shape based on what is targeted",
  "authors": [
    "Crendgrim"
  ],
  "contact": {
    "sources": "https://github.com/Crendgrim/DynamicCrosshair",
    "issues": "https://github.com/Crendgrim/DynamicCrosshair/issues"
  },

  "license": "LGPL-3.0",
  "icon": "assets/${id}/icon.png",

  "entrypoints": {
    "client": [
      "mod.crend.dynamiccrosshair.fabric.DynamicCrosshairFabric"
    ],
    "modmenu": [
      "mod.crend.dynamiccrosshair.fabric.screen.ModMenuIntegration"
    ],
    "autohud": [
      "mod.crend.dynamiccrosshair.AutoHudCompat"
    ]
  },
  "mixins": [
    {
      "config": "dynamiccrosshair-common.mixins.json",
      "environment": "client"
    },
    {
      "config": "dynamiccrosshair-fabric.mixins.json",
      "environment": "client"
    },
    {
      "config": "dynamiccrosshair.compat.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=0.15",
    "fabric-api": "*",
    "minecraft": "${minecraft}"
  }
}
